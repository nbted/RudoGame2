<UserControl x:Class="Rudo.ellipseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rudo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Canvas Grid.Row="1" Grid.Column="2" MouseLeftButtonDown="beginAparty" >
        <Ellipse  Width="100" Height="70" Fill="Khaki" Canvas.Left="10"  Canvas.Top="25" StrokeThickness="5" Stroke="#FF0000FF"/>
        <TextBlock Canvas.Left="58" Canvas.Top="52"  FontWeight="Bold" Text="{Binding Path=EllipseText}"/>
    </Canvas>


</UserControl>

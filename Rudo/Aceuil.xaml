<Window x:Class="Rudo.Aceuil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rudo"
        mc:Ignorable="d"
        Title="Aceuil" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="124" Margin="29,30,0,0" VerticalAlignment="Top" Width="216">
            <Button Content="Host Game" Margin="30,10,38,0" Click="Button_Click"/>
            <Button Content="Connect" Margin="30,10,38,0"/>
            <Button Content="Local Game" Margin="30,10,38,0" Click="local_game"/>
            <Button Content="Historique" Height="21" Margin="30,10,38,0"/>
        </StackPanel>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="137,199,0,0" TextWrapping="Wrap" Text="Enter UserName" VerticalAlignment="Top" Width="120"/>
        <Label   Content="User" HorizontalAlignment="Left" Margin="29,196,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>

<UserControl x:Class="Rudo.GameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rudo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel HorizontalAlignment="Left" Height="280" Margin="10,10,0,0" VerticalAlignment="Top" Width="290">
        <Label Content="Game Over" Margin="100,15,100,0" Height="25" FontSize="14" FontFamily="Georgia"
               FontWeight="Bold"  Background="Black"  Foreground="Orange"   VerticalAlignment="Center"  
               HorizontalAlignment="Center"/>

        <Label Name="gOver" Content="{Binding GOver}" />


    </StackPanel>


</UserControl>
